{
    // Only include files in the src directory
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        // Tells the compiler to check JS files
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "nodenext",
    },
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}